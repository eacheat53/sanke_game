# 贪吃蛇游戏环境变量示例文件
# 复制此文件为.env并根据需要修改

# 游戏设置
SNAKE_GAME_DIFFICULTY=normal  # 难度: easy, normal, hard
SNAKE_GAME_FULLSCREEN=false   # 是否全屏: true, false
SNAKE_GAME_SOUND=true         # 是否开启声音: true, false
SNAKE_GAME_VOLUME=0.7         # 音量: 0.0-1.0

# 开发设置
SNAKE_GAME_DEBUG=false        # 是否开启调试模式: true, false
SNAKE_GAME_LOG_LEVEL=info     # 日志级别: debug, info, warning, error, critical

# 自定义颜色 (RGB格式)
SNAKE_GAME_COLOR_BACKGROUND=0,0,0       # 背景颜色
SNAKE_GAME_COLOR_SNAKE_HEAD=0,200,0     # 蛇头颜色
SNAKE_GAME_COLOR_SNAKE_BODY=0,255,0     # 蛇身颜色
SNAKE_GAME_COLOR_FOOD=255,0,0           # 食物颜色

# 性能设置
SNAKE_GAME_FPS=10             # 游戏帧率